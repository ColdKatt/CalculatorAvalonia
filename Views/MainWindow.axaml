<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CalculatorAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="400" MinHeight="400"
        x:Class="CalculatorAvalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CalculatorAvalonia">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Window.Styles>
        <StyleInclude Source="/Styles/ButtonStyles.axaml" />
    </Window.Styles>
    
    <Panel Background="#0F1629">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    TintColor="#0F1629"
                    MaterialOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
            <Grid Margin="30" ColumnDefinitions="* * * * *" RowDefinitions="1.5* * * * * *"
                  ColumnSpacing="10" RowSpacing="10">

                <Border Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="Gray" BorderThickness="2" Padding="5">
                    <Grid RowDefinitions="* 3.5*">
                        <Viewbox Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Expression}" Margin="0 0 2 0" Foreground="LightGray" />
                        </Viewbox>
                        
                        <Viewbox Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Result}" Margin="0 0 2 0" />
                        </Viewbox>
                    </Grid>
                </Border>
                
                        <!-- Buttons 0-9 -->
                <Button Classes="btnDigit" Grid.Row="5" Grid.Column="1" Content="0" />
                <Button Classes="btnDigit" Grid.Row="4" Grid.Column="0" Content="1" />
                <Button Classes="btnDigit" Grid.Row="4" Grid.Column="1" Content="2" />
                <Button Classes="btnDigit" Grid.Row="4" Grid.Column="2" Content="3" />
                <Button Classes="btnDigit" Grid.Row="3" Grid.Column="0" Content="4" />
                <Button Classes="btnDigit" Grid.Row="3" Grid.Column="1" Content="5" />
                <Button Classes="btnDigit" Grid.Row="3" Grid.Column="2" Content="6" />
                <Button Classes="btnDigit" Grid.Row="2" Grid.Column="0" Content="7" />
                <Button Classes="btnDigit" Grid.Row="2" Grid.Column="1" Content="8" />
                <Button Classes="btnDigit" Grid.Row="2" Grid.Column="2" Content="9" />

                        <!-- Base operations -->
                <Button Classes="btnAdd"  Grid.Row="4" Grid.Column="3" />
                <Button Classes="btnSubtract" Grid.Row="4" Grid.Column="4" />
                <Button Classes="btnDivide" Grid.Row="3" Grid.Column="3" />
                <Button Classes="btnMultiply" Grid.Row="3" Grid.Column="4" />

                        <!-- Other operations -->
                <Button Classes="btnDot" Grid.Row="5" Grid.Column="2" />
                <Button Classes="btnEqual" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2"/>
                <Button Classes="btnReverse" Grid.Row="5" Grid.Column="0" />
                <Button Classes="btnOpenBracket" Grid.Row="1" Grid.Column="0" />
                <Button Classes="btnCloseBracket" Grid.Row="1"  Grid.Column="1" />
                <Button Classes="btnCancel" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" />
                <Button Classes="btnClear" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" />

            </Grid>
    </Panel>

</Window>
